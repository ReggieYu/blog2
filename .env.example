# 运行端口
PORT=8080
# gin 模式：debug/release/test
GIN_MODE=debug

# JWT 密钥(生产环境需修改)
JWT_SECRET=dev_secret
JWT_TTL_HOURS=24

# 数据库配置
# DB_DRIVER 可选sqlite或mysql
DB_DRIVER=sqlite
# SQLite 文件名，仅在DB_DRIVER=sqlite时有效
SQLITE_PATH=blog.db

# MYSQL连接串，仅在DB_DRIVER=mysql时有效
# 格式: username:password@tcp(host:port)/dbname?charset=utf8mb
MYSQL_DSN=root:password@tcp(127.0.0.1:3306)/blog?charset=utf8mb4&parseTime=True&loc=Local